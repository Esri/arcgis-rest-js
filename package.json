{
  "name": "@esri/rest",
  "version": "1.0.0",
  "description": "a compact, modular Esri JavaScript client library that runs in modern browsers and Node.js",
  "main": "index.js",
  "devDependencies": {
    "@types/es6-promise": "0.0.32",
    "@types/fetch-mock": "^5.8.3",
    "@types/form-data": "0.0.33",
    "@types/isomorphic-fetch": "0.0.34",
    "@types/jasmine": "^2.5.53",
    "@types/node": "^6.0.82",
    "acetate": "github:patrickarlt/acetate#acetate-2",
    "acetate-cli": "^1.0.1",
    "concurrently": "^3.5.0",
    "cpx": "^1.5.0",
    "fetch-mock": "^5.12.1",
    "grunt": "^1.0.1",
    "grunt-cli": "^1.2.0",
    "grunt-typedoc": "^0.2.4",
    "inspect-process": "^0.5.0",
    "isomorphic-form-data": "^1.0.0",
    "jasmine-core": "^2.6.4",
    "jasmine-ts": "^0.2.0",
    "karma": "^1.7.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.0.1",
    "karma-ie-launcher": "^1.0.0",
    "karma-jasmine": "^1.1.0",
    "karma-safari-launcher": "^1.0.0",
    "karma-typescript": "^3.0.4",
    "karma-typescript-es6-transform": "^1.0.2",
    "lerna": "^2.0.0",
    "lint-staged": "^4.0.2",
    "minimatch": "^3.0.4",
    "node-sass": "^4.5.3",
    "onchange": "^3.2.1",
    "prettier": "^1.5.3",
    "resolve": "^1.3.3",
    "rollup": "^0.45.2",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-typescript2": "^0.4.6",
    "slug": "^0.9.1",
    "tslint": "^5.5.0",
    "tslint-config-prettier": "^1.3.0",
    "tslint-config-standard": "^6.0.1",
    "typedoc": "^0.8.0",
    "typescript": "^2.4.1"
  },
  "dependencies": {
    "es6-promise": "^4.1.1",
    "form-data": "^2.2.0",
    "husky": "^0.14.3",
    "isomorphic-fetch": "^2.2.1",
    "lodash-es": "^4.17.4",
    "tslib": "^1.7.1",
    "url-search-params": "^0.9.0"
  },
  "lint-staged": {
    "*.ts": ["prettier --write --parser typescript", "tslint", "git add"]
  },
  "scripts": {
    "build": "lerna run build",
    "test": "npm run test:chrome && npm run test:node",
    "test:chrome:debug": "karma start --auto-watch --no-single-run --browsers=Chrome",
    "test:chrome": "karma start --single-run --browsers=Chrome",
    "test:node": "jasmine --config=jasmine.json",
    "test:node:debug": "inspect jasmine --config=jasmine.json",
    "docs:typedoc": "node docs/build-typedoc.js",
    "docs:dev:typedoc": "onchange -v 'packages/*/src/**/*.ts' -- npm run docs:typedoc",
    "predocs:serve": "npm run docs:typedoc",
    "docs:serve": "concurrently \"npm run docs:dev:images\" \"npm run docs:dev:acetate\" \"npm run docs:dev:sass\" \"npm run docs:dev:typedoc\"",
    "docs:dev:images": "cpx \"docs/src/**/*.{png,jpg,jpeg,gif,svg,webm,ogg}\" docs/build -w",
    "docs:dev:acetate": "acetate server --log=debug --config docs/acetate.config.js",
    "predocs:dev:sass": "npm run docs:build:sass",
    "docs:dev:sass": "node-sass --watch --recursive --output docs/build/css --source-map true --source-map-contents docs/src/sass",
    "docs:build:sass": "node-sass --output docs/build/css --source-map true --source-map-contents docs/src/sass",
    "lint": "tslint --project tsconfig.json --type-check",
    "lint:fix": "tslint --project tsconfig.json --type-check --fix",
    "precommit": "lint-staged",
    "bootstrap": "lerna bootstrap",
    "postinstall": "npm run bootstrap"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArcGIS/rest-js.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ArcGIS/rest-js/issues"
  },
  "homepage": "https://github.com/ArcGIS/rest-js#readme"
}
